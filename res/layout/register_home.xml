<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/registration_logo" />

    <TextView
        android:id="@+id/str_registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/registration_title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#666"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/registration_blue_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/str_registration_mobile_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/registration_mobile_number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edMobileNumber"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_box"
            android:drawableLeft="@drawable/icon_mobile"
            android:ems="10"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#666"
            android:textSize="17sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/butSubmit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/new_button_submit"
        android:gravity="center"
        android:padding="0dp"
        android:textSize="17sp" >

        <TextView
            android:id="@+id/str_registration_get_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_get_verification"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>